<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="org.litepal.LitePalApplication"
    package="poche.fm.potunes">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon, android:theme">
        <activity
            android:name=".MainActivity"
            android:label="破音万里"
            android:screenOrientation="portrait">
            <intent-filter>

                <!-- 启动页面设置 -->
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TrackListActivity"
            android:parentActivityName=".MainActivity">
            <intent-filter>
                <action android:name="fm.poche.potunes.Action_START" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".PlayerActivity"
            android:launchMode="singleTask" />

        <service
            android:name=".Model.PlayerService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="fm.poche.media.MUSIC_SERVICE" />
            </intent-filter>
        </service>

        <activity
            android:name=".MyMusicActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".DownloadingActivity" />
        <activity android:name=".BaseActivity"></activity>
    </application>

</manifest>